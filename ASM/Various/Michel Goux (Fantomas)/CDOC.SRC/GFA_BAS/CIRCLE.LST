'
SETCOLOR 0,0
SETCOLOR 15,&H777
m&=70
buffer%=MALLOC(688)
buf%=buffer%
FOR n&=280 TO 359 STEP 2
  x&=159+m&*COSQ(n&)
  y&=99-m&*SINQ(n&)
  IF n&=0
    PSET x&,y&,4
  ELSE
    IF n&/20=INT(n&/20)
      PSET x&,y&,1
    ELSE
      PSET x&,y&,2
    ENDIF
  ENDIF
  DPOKE buf%,x&
  DPOKE buf%+2,y&
  ADD buf%,4
  PAUSE 2
NEXT n&
FOR n&=0 TO 260 STEP 2
  x&=159+m&*COSQ(n&)
  y&=99-m&*SINQ(n&)
  IF n&=0
    PSET x&,y&,4
  ELSE
    IF n&/20=INT(n&/20)
      PSET x&,y&,1
    ELSE
      PSET x&,y&,2
    ENDIF
  ENDIF
  DPOKE buf%,x&
  DPOKE buf%+2,y&
  ADD buf%,4
  PAUSE 2
NEXT n&
~INP(2)
BSAVE "A:\CDOC.SRC\DATA\CIRCLE.DAT",buffer%,688
SETCOLOR 15,0
SETCOLOR 0,&H777
