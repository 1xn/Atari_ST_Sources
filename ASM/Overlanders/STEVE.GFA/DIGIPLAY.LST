'
' Digit player rout
'
RESERVE 50000
CLS
' Digi-rout (in assembler)
INLINE digit%,841
'
' Load the sound
OPEN "i",#1,"REPLAY.SPL"
lenght%=LOF(#1)
CLOSE
sound%=MALLOC(lenght%)
BLOAD "REPLAY.SPL",sound%
'
begin%=digit%+28
end%=digit%+32
speed%=digit%+36
{begin%}=sound%
{end%}=sound%+lenght%
{speed%}=16              ! in Khz
call%=digit%+40
WAVE 0,0
'
PRINT "REPLAY..."
CALL call%            ! Call the assembler rout
~INP(2)
~MFREE(sound%)
END
