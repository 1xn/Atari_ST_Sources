' **********  Creation des sinus amortis!  ************
DIM dats%(4000)
dat$=SPACE$(7000)
fin%=1023
FOR comp%=0 TO fin%
  sinus=SIN(comp%*PI*2/32)
  IF sinus>0
    val%=(15*(fin%-comp%)/fin%)*sinus
    val2%=(12*(fin%-comp%)/fin%)*sinus
  ELSE
    val%=(11*(fin%-comp%)/fin%)*sinus
    val2%=(8*(fin%-comp%)/fin%)*sinus
  ENDIF
  dats%(comp%*3)=val%-50
  dats%(comp%*3+1)=val2%
  dats%(comp%*3+2)=0
  PSET comp%,val%+50,3
  PSET comp%,val2%+100,2
NEXT comp%
' **********  Creation Mvt de la main!.  *************
index%=1014
FOR comp%=0 TO 36
  val%=59*SIN(comp%*PI/37)
  dats%(index%*3+2)=val%
  PSET index%,val%,1
  index%=index%+1
  IF index%=1024
    index%=0
  ENDIF
NEXT comp%
' **********  Conversion du tableau!...  *************
adr%=VARPTR(dat$)
FOR comp%=0 TO 3071
  DPOKE adr%,dats%(comp%)
  adr%=adr%+2
NEXT comp%
adr%=VARPTR(dat$)
BSAVE "a:\courbes.xxx",adr%,6144
