'
' Affichage de tous les caractäres par Bconout
' GFA-BASIC           FONTOUT.GFA
'
VOID BIOS(3,2,27)           ! Caractäre de commande avec traitement: 2
VOID BIOS(3,2,ASC("E"))     ! ESC (27) + E --> Effacer Çcran
'
FOR char%=0 TO 255
  IF char% MOD 16=0         ! nouvelle ligne tous les 16 caractäres
    VOID BIOS(3,2,13)       ! (13 = Carriage Return, 10 = Line Feed;
    VOID BIOS(3,2,10)       ! caractäre de commande!)
  ENDIF
  VOID BIOS(3,5,char%)      ! Afficher le caractäre plus un espace
  VOID BIOS(3,5,32)         ! (5: pas de caractäre de contrìle)
NEXT char%
'
PRINT AT(2,20);"Les caractäres de l'ATARI ST"
END
