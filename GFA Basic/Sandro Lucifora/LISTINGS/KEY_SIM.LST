$m500
ap_id&=APPL_INIT()
me_id&=MENU_REGISTER(ap_id&,"  ACC-Test")
DO
  ~EVNT_MESAG(0)
  IF MENU(1)=40
    ALERT 1,"|Jetzt  wird  ein Text Åber  |den KEY-Buffer Åbergeben !  ",1," TOS ",wahl%
    @key_sim("Sandro Lucifora  fÅr  TOS")       ! procedure mit dem Text aufrufen
  ENDIF
LOOP
'
PROCEDURE key_sim(text$)
  LOCAL z%
  FOR z%=1 TO LEN(text$)                        ! buchstabe fÅr buchstabe...
    KEYPRESS ASC(MID$(text$,z%,1))              ! ... mittels KEYPRESS Åbergeben
  NEXT z%
RETURN
