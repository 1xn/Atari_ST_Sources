PROCEDURE feld_fuellen
  '
  ERASE codiertabelle%()                ! feld lîschen
  DIM codiertabelle%(255)               ! feld neu dimensionieren
  LOCAL z%
  '
  FOR z%=0 TO 255                       ! \
    codiertabelle%(z%)=z%               !  > zeichensatztabelle 1:1 fÅllen
  NEXT z%                               ! /
  FOR z%=255 DOWNTO 32                  ! \
    codiertabelle%(z%)=255-z%+32        !  > zeichensatztabelle verschlÅsseln
  NEXT z%                               ! /
RETURN
PROCEDURE ausgabe_schluesseln(VAR code_text$)
  LOCAL z%
  FOR z%=1 TO LEN(code_text$)
    MID$(code_text$,z%,1)=CHR$(codiertabelle%(ASC(MID$(code_text$,z%,1))))
  NEXT z%
RETURN
