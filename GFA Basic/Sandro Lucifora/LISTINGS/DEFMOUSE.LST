'
' Procedure um verschiedene Mouseformen darzustellen
'
' 5.7.1992  Sandro Lucifora  fÅr  TOS
'
@main
'
PROCEDURE main
  LOCAL z%
  '
  @defmouse(10)
  ~INP(2)
  @defmouse(11)
  ~INP(2)
  @defmouse(12)
  ~INP(2)
  @defmouse(13)
  ~INP(2)
  z%=14
  DO
    @defmouse(z%)
    PAUSE 10
    INC z%
    IF z%=20
      z%=14
    ENDIF
    EXIT IF INKEY$<>""
  LOOP
  EDIT
RETURN
'
PROCEDURE defmouse(defmouse|)
  LOCAL z%,data$,maske$,defmx|,defmy|,defmouse$
  '
  SELECT defmouse|              ! nach defmouse entsprechendes RESTORE
  CASE 10
    RESTORE diskette
  CASE 11
    RESTORE lupe
  CASE 12
    RESTORE drucker
  CASE 13
    RESTORE telefon
  CASE 14
    RESTORE sanduhr1
  CASE 15
    RESTORE sanduhr2
  CASE 16
    RESTORE sanduhr3
  CASE 17
    RESTORE sanduhr4
  CASE 18
    RESTORE sanduhr5
  CASE 19
    RESTORE sanduhr6
  ENDSELECT
  '
  READ defmx|,defmy|,maskenfarbe|,cursorfarbe|  ! erste informationen lesen
  LET defmouse$=MKI$(defmx|)+MKI$(defmy|)+MKI$(1)+MKI$(maskenfarbe|)+MKI$(cursorfarbe|) ! bitmuster definieren
  FOR z%=1 TO 16                ! \
    READ d%                     !  \
    LET data$=data$+MKI$(d%)    !   \
  NEXT z%                       !    \ daten
  FOR z%=1 TO 16                !    /       einlesen
    READ m%                     !   /
    maske$=maske$+MKI$(m%)      !  /
  NEXT z%                       ! /
  LET defmouse$=defmouse$+maske$+data$          ! bitmuster definieren
  '
  DEFMOUSE defmouse$                            ! zeigt die neue mausform an
RETURN
