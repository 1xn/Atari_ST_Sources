' ***********************************
' *  UNE CREATURE MANGE UN ALIMENT  *
' ***********************************
PROCEDURE manger_aliment(perso%,aliment%)
 PRINT nom_creature$(perso%);
 PRINT " mange ";nom_aliment$(aliment%)
 ADD creature%(perso%,10),effet_aliment%(aliment%)
RETURN

