' ********************************************
' *  AFFICHAGE D'UN TEXTE DANS UN RECTANGLE  *
' ********************************************
PROCEDURE draw_texte(px%,py%,tx%,ty%,m$,f%,c%,t%)
  LOCAL x_texte%,y_texte%
  '
  x_texte%=px%+((tx%-LEN(m$)*8)/2)
  y_texte%=py%+7+((ty%-8)/2)
  @cadre(px%,py%,tx%,ty%,f%,c%)
  TEXT x_texte%,y_texte%,m$
RETURN
