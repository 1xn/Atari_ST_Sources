' *******************************
' *  TEST D'UNE ZONE GRAPHIQUE  *
' *******************************
FUNCTION tstzone(x%,y%,px%,py%,tx%,ty%)
  LOCAL px2%,py2%
  LOCAL rep%
  '
  px2%=px%+tx%-1
  py2%=py%+ty%-1
  r%=FALSE
  IF (x%>=px%) AND (x%<=px2%)
    IF (y%>=py%) AND (y%<=py2%)
      rep%=TRUE
    ENDIF
  ENDIF
  RETURN rep%
ENDFUNC
