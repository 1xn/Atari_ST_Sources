img$=SPACE$(32034)
FILESELECT "\*.PI1",".PI1",nom$
BLOAD nom$,V:img$
~XBIOS(6,L:V:img$+2)
DEFTEXT 1,1,0,26
TEXT 0,100,"LOOK AT THE PICTURE DO YOU LIKE IT ?"
SGET e$
CLS
REPEAT
  CLS
  REPEAT
    p%=ADD(p%,160)
    RC_COPY V:e$,0,76,4,25 TO V:e$,315,76
    RC_COPY V:e$,3,76,315,25 TO V:e$,0,76
    VSYNC
    RC_COPY V:e$,0,76,319,25 TO XBIOS(2),0,174
    RC_COPY ADD(V:img$,34),0,DIV(p%,160),319,25 TO XBIOS(2),0,174,1
    BMOVE ADD(XBIOS(2),27840),ADD(XBIOS(2),p%),4000
  UNTIL MOUSEK OR p%>27680
  p%=0
UNTIL INKEY$=" "
EDIT
