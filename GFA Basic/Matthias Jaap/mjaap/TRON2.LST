vorspann
CLS
DIM sp1(25,80),sp2(25,80)
a=14
b=15
c=18
d=30
bew=1
bew2=1
sp1(a,b)=1
sp2(c,d)=2
a$=INPUT$(1)
GOTO star
star:
a$=INKEY$
PRINT AT(b,a);"p";"b2";"A";"q"
PRINT AT(d,c);"p";"b1";"B";"q"
SELECT a$
CASE "I"
  bew=1    !OBEN
CASE "M"
  bew=2    !UNTEN
CASE "K"
  bew=3    !RECHTS
CASE "J"
  bew=4    !LINKS
ENDSELECT
SELECT bew
CASE 1
  DEC a
CASE 2
  INC a
CASE 3
  INC b
CASE 4
  DEC b
ENDSELECT
sp1(a,b)=1
IF a=2
  a=3
ELSE IF a=23
  a=22
ENDIF
IF b<1
  b=1
ELSE IF b>79
  b=79
ENDIF
IF sp2(a,b)=2
  PRINT m$;" WINS!"
  a$=INPUT$(1)
  END
ENDIF
SELECT a$
CASE "R"
  bew2=1
CASE "C"
  bew2=2
CASE "F"
  bew2=3
CASE "D"
  bew2=4
ENDSELECT
SELECT bew2
CASE 1
  DEC c
CASE 2
  INC c
CASE 3
  INC d
CASE 4
  DEC d
ENDSELECT
IF d<1
  d=1
ELSE IF d>79
  d=79
ENDIF
IF c<1
  c=1
ELSE IF c>23
  c=23
ENDIF
sp2(c,d)=2
IF sp1(c,d)=1
  PRINT n$;" WINS!"
  a$=INPUT$(1)
  END
ENDIF
FOR i=1 TO speed*100
NEXT i
GOTO star
> PROCEDURE vorspann
  INPUT "Spieler 1:",n$
  INPUT "Spieler 2:",m$
  INPUT "SPEED (h”her=langsamer):";speed
  CLS
RETURN
