PROCEDURE verb_noun(entry$,VAR verb$,noun$)
  verb$=""
  noun$=""
  IF LEN(entry$)
    entry$=UPPER$(TRIM$(entry$))
    IF INSTR(entry$," ")
      verb$=LEFT$(entry$,INSTR(entry$," ")-1)
      noun$=RIGHT$(entry$,LEN(entry$)-RINSTR(entry$," "))
    ELSE
      verb$=entry$
      noun$=entry$
    ENDIF
  ENDIF
RETURN
