PROCEDURE center_text(txt$,screen_line%)
  LOCAL xa%
  IF INT(screen_line%)>0 AND screen_line%<26
    xa%=40
    IF XBIOS(4)
      xa%=80
    ENDIF
    IF LEN(txt$)<xa%
      IF INT(screen_line%)=25
        PRINT AT((xa%-LEN(txt$))/2+1,screen_line%);txt$;
      ELSE
        PRINT AT((xa%-LEN(txt$))/2+1,screen_line%);txt$
      ENDIF
    ENDIF
  ENDIF
RETURN
