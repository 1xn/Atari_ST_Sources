60400-Einblenden
60410 DIM R%L(16),G%L(16),B%L(16),Dr!(16),Dg!(16),Db!(16),Rn!(16),Gn!(16),Bn!(16)
60420 FOR I%L=1 TO 15
60430 R%L(I%L)=Col%L(I%L)/256
60440 G%L(I%L)=(Col%L(I%L)-R%L(I%L)*256)/16
60450 B%L(I%L)=(Col%L(I%L)-R%L(I%L)*256-G%L(I%L)*16)
60460 Dr!(I%L)=R%L(I%L)/15
60470 Dg!(I%L)=G%L(I%L)/15
60480 Db!(I%L)=B%L(I%L)/15
60490 NEXT I%L
60500 FOR I%L=1 TO 15
60510 FOR F%L=0 TO 15
60520 Rn!(F%L)=Rn!(F%L)+Dr!(F%L):Gn!(F%L)=Gn!(F%L)+Dg!(F%L):Bn!(F%L)=Bn!(F%L)+Db!(F%L)
60530 XBIOS (R%L,7,F%L, INT(Rn!(F%L)+.1)*256+ INT(Gn!(F%L)+.1)*16+Bn!(F%L)
60540 NEXT F%L
60550 WAIT .05: NEXT I%L
60590 RETURN
