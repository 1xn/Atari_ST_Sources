' vsetcolorpalette juste aprŠs la proc‚dure make_screen
vsetcolorpalette(0,0,0,63)
FOR i%=0 TO 63                                ! Voila un trŠs
  GOSUB vsetcolorpalette(100+i%,i%,i%,i%)     ! beau d‚grad‚ de
  COLOR i%+100                                ! gris sur 64
  LINE 0,i%,640,i%                            ! niveaux.
NEXT i%                                       !
PROCEDURE vsetcolorpalette(index%,r%,v%,b%)
  CONTRL(0)=14
  CONTRL(3)=4
  INTIN(0)=index%
  INTIN(1)=r%*1000/63
  INTIN(2)=v%*1000/63
  INTIN(3)=b%*1000/63
  VDISYS
RETURN
