FUNCTION mem_calc(b&,h&)
  '
  LOCAL planes&,mem%
  '
  ' Anzahl der Bitplanen ermitteln:
  '
  CONTRL(2)=6
  INTIN(0)=1
  VDISYS 102,1,0,0
  planes&=INTOUT(4)
  '
  ' benîtigten Speicher berechnen:
  '
  mem%=(((b&+15) DIV 16)*16*h&)*planes& DIV 8
  '
  RETURN (mem%)                              !Wert Åbergeben
ENDFUNC
