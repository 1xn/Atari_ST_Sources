Procedure Speicher_einlesen
  I%=-1
  Vo%=-1
  Kko%=-1
  Gko%=-1
  Ze%=-1
  Do
    Inc I%
    If Stufe%(I%)<=Stufe%
      If Art$(I%)="vo" And Not Shift!(I%)
        Inc Vo%
        Vok$(Vo%)=A$(I%)
      Endif
      If Art$(I%)="ko" And Shift!(I%)
        Inc Gko%
        Grosskon$(Gko%)=A$(I%)
      Endif
      If Art$(I%)="ko" And Not Shift!(I%)
        Inc Kko%
        Kleinkon$(Kko%)=A$(I%)
      Endif
      If Art$(I%)="ze"
        Inc Ze%
        Zeich$(Ze%)=A$(I%)
      Endif
    Endif
    Exit if A$(I%)="ende"
  Loop
  Inc Vo%
  Inc Gko%
  Inc Kko%
  Inc Ze%
Return
