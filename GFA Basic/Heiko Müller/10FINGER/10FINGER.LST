Procedure Uebungsstring_erstellen
  Ueb$=""
  If Stufe%<9
    Repeat
      Wort$=""
      If Stufe%>6
        Wort$=Str$(Random(100))+" "
      Endif
      If Stufe%>5
        Wort$=Wort$+Grosskon$(Random(Gko%))
      Else
        Wort$=Wort$+Kleinkon$(Random(Kko%))
      Endif
      Wort$=Wort$+Vok$(Random(Vo%))
      Wort$=Wort$+Kleinkon$(Random(Kko%))
      Wort$=Wort$+Vok$(Random(Vo%))
      Wort$=Wort$+Kleinkon$(Random(Kko%))
      Wort$=Wort$+Vok$(Random(Vo%))
      If Stufe%>4
        Wort$=Wort$+Kleinkon$(Random(Kko%))
        Wort$=Wort$+Zeich$(Random(Ze%))
      Endif
      If Left$(Wort$,1)<>" "
        Wort$=Wort$+" "
      Endif
      Ueb$=Ueb$+Wort$
    Until Len(Ueb$)>65
    Ueb$=Left$(Ueb$,65)
  Endif
Return
