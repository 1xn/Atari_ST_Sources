a1&=WORD{ADD(adr_ptr%,ADD(ico&,12))}
a2&=WORD{ADD(adr_ptr%,ADD(ico&,14))}
a3&=WORD{ADD(adr_ptr%,ADD(ico&,16))}
a4&=WORD{ADD(adr_ptr%,ADD(ico&,18))}
a5&=WORD{ADD(adr_ptr%,ADD(ico&,20))}
