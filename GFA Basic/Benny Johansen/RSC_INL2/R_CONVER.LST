NEXT i&
'
RETURN -1
'
ENDFUNC
> FUNCTION rsrc_gaddr(f&,i&,VAR a%)
CLR a%
SELECT f&
'   -------------------------------- TREE OBJECT ---------------
CASE 0
IF i&<tree_&
a%=tree_%(i&)
ENDIF
'   -------------------------------- STRING --------------------
CASE 5
IF i&<freestr_&
a%=V:freestr_$(i&)
ENDIF
'   -------------------------------- FREEIMG -------------------
CASE 6
IF i&<freeimg_&
a%=ADD(V:freeimg_|(0),MUL(i&,14))
ENDIF
'
ENDSELECT
RETURN (a%>0)
ENDFUNC
> FUNCTION rsrc_free
CLR tree_&,object_&,string_&,tedinfo_&,image_&,icon_&,freestr_&,freeimg_&
ERASE freestr_$(),tree_%(),object_|(),tedinfo_|(),image_|()
ERASE icon_|(),freeimg_|()
RETURN -1
ENDFUNC
