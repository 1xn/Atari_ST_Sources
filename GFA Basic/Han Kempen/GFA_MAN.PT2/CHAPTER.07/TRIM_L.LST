' *** TRIM_L.LST ***                                   2nd GFA-Manual, page 7-3
FUNCTION trim_left$(txt$)
  '
  ' *** Strip all leading space-characters from txt$ ("   123 " becomes "123 ")
  '
  LOCAL t$
  t$=TRIM$(txt$)
  IF LEN(t$)=0
    RETURN ""
  ELSE
    RETURN RIGHT$(txt$,SUCC(SUB(LEN(txt$),INSTR(txt$,t$))))
  ENDIF
ENDFUNC
