' *** ARR_MEAN.LST ***                                 2nd GFA-Manual, page 6-8
FUNCTION array_mean(zero!,VAR proc())
  '
  ' *** Return mean of word-array
  ' *** If zero!=FALSE zero is ignored
  '
  LOCAL i,n,sum%
  IF zero!
    ' *** count zeroes
    FOR i=0 TO PRED(DIM?(proc()))
      ADD sum%,proc(i)
    NEXT i
    RETURN sum%/i
  ELSE
    ' *** ignore zeroes
    FOR i=0 TO PRED(DIM?(proc()))
      IF proc(i)<>0
        ADD sum%,proc(i)
        INC n
      ENDIF
    NEXT i
    RETURN sum%/n
  ENDIF
ENDFUNC
