' *** BUBL_SRT.LST ***                                 2nd GFA-Manual, page 5-6
> PROCEDURE bubble_sort(VAR proc())
  '
  ' *** Sort word-array with 'Bubble Sort' (simple but slow)
  '
  LOCAL i,j
  FOR i=SUB(DIM?(proc()),2) DOWNTO 1
    FOR j=0 TO i
      IF proc(j)>proc(SUCC(j))
        SWAP proc(j),proc(SUCC(j))
      ENDIF
    NEXT j
  NEXT i
RETURN
