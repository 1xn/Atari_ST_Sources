' *** SEL_SRT.LST ***                                  2nd GFA-Manual, page 5-7
> PROCEDURE selection_sort(VAR proc())
  '
  ' *** Sort word-array with 'Selection Sort'
  '
  LOCAL last,i,min,p,j
  last=PRED(DIM?(proc()))
  FOR i=0 TO PRED(last)
    min=proc(i)
    p=i
    FOR j=SUCC(i) TO last
      IF proc(j)<min
        min=proc(j)
        p=j
      ENDIF
    NEXT j
    proc(p)=proc(i)
    proc(i)=min
  NEXT i
RETURN
