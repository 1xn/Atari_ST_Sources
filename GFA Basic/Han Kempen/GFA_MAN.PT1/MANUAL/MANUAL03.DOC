       LOCAL t$
       t$=TIME$
       IF t$=clock$
         MID$(clock$,8)=SUCC(RIGHT$(clock$))
       ELSE
         clock$=t$
       ENDIF
       PRINT AT(1,1);clock$
     RETURN

