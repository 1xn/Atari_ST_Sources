PROCEDURE maus_aus
  LOCAL rts%
  INLINE rts%,2
  HIDEM
  maus_aus_oldvec%=LPEEK(XBIOS(34,0)+16)
  SLPOKE XBIOS(34,0)+16,rts%
RETURN
