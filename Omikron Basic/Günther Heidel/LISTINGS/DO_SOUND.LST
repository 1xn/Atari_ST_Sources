0 DIM Bild$(1)
1 A%L=0
2 A0%L= MEMORY(32256)
3 A1%L= MEMORY(32256)
4 PRINT CHR$(27);"f";
5 OPEN "F",16,"*.pic",63
6 REPEAT
7   FIELD 16,30,14 AS A$
8   GET 16,1
9   IF EOF(16) THEN EXIT
10   A$= LEFT$(A$, INSTR(A$, CHR$(0))-1)
11   IF A$<>"." AND A$<>".." THEN
12     A$= LEFT$(A$+ SPC(12),12)
13     Bild$(A%L)=A$
14     A%L=A%L+1
15     DIM Bild$(A%L)
