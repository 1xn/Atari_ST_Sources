17 UNTIL 0
18 CLOSE 16
19
20 REPEAT
21   FOR I%L=0 TO A%L-1 STEP 2
22     BLOAD Bild$(I%L),A0%L
23     BLOAD Bild$(I%L+1),A1%L
24     Scroll_Hoch(A0%L,A1%L)
