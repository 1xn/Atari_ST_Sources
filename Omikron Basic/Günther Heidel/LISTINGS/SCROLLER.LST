0 DIM Bild$(1)
1 A%L=0
2 A0%L= MEMORY(32256)
3 A1%L= MEMORY(32256)
4 PRINT CHR$(27);"f";
5 OPEN "F",16,"*.pic",63
6 REPEAT
7  FIELD 16,30,14 AS A$
8  GET 16,1
9  IF EOF(16) THEN EXIT
10  A$= LEFT$(A$, INSTR(A$, CHR$(0))-1)
11  IF A$<>"." AND A$<>".." THEN
12    A$= LEFT$(A$+ SPC(12),12)
13    Bild$(A%L)=A$
14    A%L=A%L+1
15    DIM Bild$(A%L)
16  ENDIF
17 UNTIL 0
18 CLOSE 16
19 REPEAT
20  FOR I%L=0 TO A%L-1 STEP 2
21    BLOAD Bild$(I%L),A0%L
22    BLOAD Bild$(I%L+1),A1%L
23    Scroll_Hoch(A0%L,A1%L)
24  NEXT I%L
25 UNTIL INKEY$ <>""' Bis eine Taste gedrÅckt wurde
26 END
